BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation:"vertical"
            size_hint_x: 0.2
            Button:
                id: up_button
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                id: down_button
                text: "Down"
                on_press: app.handle_increment(-1)

    Button:
        font_size: 36
        text: "Convert miles to km"
        on_press: app.handle_calculate(int(input_number.text))
    Label:
        id: output_label
        font_size: 36
        color: (1,1,0,1)
        text: "54.71756"
